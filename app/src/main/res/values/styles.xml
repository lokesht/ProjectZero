<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="CustomeButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/btn_width_margin</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:minHeight">@dimen/abc_action_button_min_height_material</item>
        <item name="android:minWidth">@dimen/abc_action_button_min_width_material</item>
        <item name="android:background">@color/udacity</item>
    </style>
</resources>
